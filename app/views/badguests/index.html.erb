<p id="notice"><%= notice %></p>

<style>
#search_form{
  
  margin-left: 30%;
  margin-right:30%;
  text-align: center;
}
#search_button{
  text-align: center;
}
#search_text{
  font-size:30px;
  text-align: center;
}

.jumbotron{
  background-color: rgba(255,255,255,0.4);
}

</style>

<script src="jquery.js"></script>
<script src="typed.js"></script>
<script>
    $(function(){
        $(".subtext").typed({
            strings: ["永遠都會公休", "永遠都會客滿", "永遠都訂不到位"],
            typeSpeed: 200,
            startDelay: 1000,
            backSpeed: 200,
            backDelay: 1000,
            showCursor: true,
            cursorChar: "|",
            loop: true

        });
    });
</script>

<div class="jumbotron text-center">
  <h1 class="title">您選的日子</h1>
  <span class="subtext" style="font-size: 30pt;"></span>
</div>
<%= form_tag search_path , method: :get, id:'search_form' do %>
  <p>

    <%= text_field_tag :search, params[:search] , class:"form-control",  placeholder:"請輸入想查詢的電話號碼", required: true, oninvalid: "setCustomValidity('請輸入想查詢的電話號碼')", oninput:"setCustomValidity('')", id:'search_text' %>

    <br>
    
    <%= button_tag(type: "submit", class: "btn btn-lg btn-success", id:"search_button") do %>
      <span class = "glyphicon glyphicon-search">搜尋</span>
    <% end %>
  </p>
<% end %>

<br>


